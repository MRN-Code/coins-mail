{
  "name": "coins-mail",
  "version": "1.0.0",
  "description": "HTML and text email templates for COINS.",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint src test",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "start": "node test/server.js",
    "test": "node test/index.js",
    "test:coverage": "istanbul cover test/index.js",
    "validate": "npm ls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRN-Code/coins-mail.git"
  },
  "bugs": {
    "url": "https://github.com/MRN-Code/coins-mail/issues"
  },
  "homepage": "https://github.com/MRN-Code/coins-mail#readme",
  "keywords": [
    "coins",
    "mail",
    "email"
  ],
  "author": "Cory Reed <creed@mrn.org>",
  "license": "MIT",
  "dependencies": {
    "async": "^2.0.0-rc.3",
    "autoprefixer": "^6.3.6",
    "bookshelf": "^0.9.4",
    "consolidate": "^0.14.0",
    "html-minifier": "^1.5.0",
    "inline-css": "^2.2.2",
    "joi": "^8.0.5",
    "lodash.noop": "^3.0.1",
    "node-sass": "^3.4.2",
    "postcss": "^5.0.19",
    "twig": "^0.8.9"
  },
  "devDependencies": {
    "cheerio": "^0.20.0",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.3.0",
    "istanbul": "^0.4.3",
    "knex": "^0.10.0",
    "livereload": "^0.4.1",
    "lodash.assign": "^4.0.7",
    "pre-commit": "^1.1.2",
    "sinon": "^1.17.3",
    "tape": "^4.5.1"
  },
  "pre-commit": [
    "lint",
    "validate",
    "test:coverage"
  ]
}
